<arquillian>
	<container qualifier="jboss" default="true">
		<configuration>
			<property name="jbossHome">${jboss.as.home}</property>
			<property name="serverConfig">standalone.xml</property>
			<property name="outputToConsole">false</property>
			<property name="managementAddress">${test.container.bind.address}</property>
			<property name="managementPort">29999</property>
			<property name="javaVmArguments">-Djboss.bind.address=${test.container.bind.address} -Djboss.bind.address.management=${test.container.bind.address} -Didp.url=http://${test.container.bind.address}:28080/idp/
				-Didp-sig.url=http://${test.container.bind.address}:28080/idp-sig/
				-Dsales-post.url=http://${test.container.bind.address}:28080/sales-post/
				-Dsales-saml11.url=http://${test.container.bind.address}:28080/sales-saml11
				-Dsales-post-valve.url=http://${test.container.bind.address}:28080/sales-post-valve/
				-Dsales-post-sig.url=http://${test.container.bind.address}:28080/sales-post-sig/
				-Demployee.url=http://${test.container.bind.address}:28080/employee/
				-Demployee-redirect-valve.url=http://${test.container.bind.address}:28080/employee-redirect-valve/
				-Demployee-sig.url=http://${test.container.bind.address}:28080/employee-sig/</property>
		</configuration>
	</container>
</arquillian>