<arquillian>
	<engine>
		<property name="maxTestClassesBeforeRestart">20</property>
	</engine>

	<container qualifier="jboss" default="true">
		<configuration>
			<property name="jbossHome">${jboss.as.home}</property>
			<!-- <property name="javaHome">/usr/java/jdk1.6.0_30</property> -->
<!-- 			<property name="portSet">ports-01</property> -->
			<property name="providerUrl">jnp://${test.hosts.bind.address}:21099
			</property>
			<property name="bindAddress">${test.hosts.bind.address}</property>
			<property name="profileName">default</property>
			<property name="httpPort">28080</property>
			<property name="rmiPort">21099</property>
			<property name="javaVmArguments">-Xms512m -Xmx512m
				-Didp.url=http://${test.hosts.bind.address}:28080/idp/
				-Didp-sig.url=http://${test.hosts.bind.address}:28080/idp-sig/
				-Dsales-post.url=http://${test.hosts.bind.address}:28080/sales-post/
				-Dsales-saml11.url=http://${test.hosts.bind.address}:28080/sales-saml11
				-Dsales-post-valve.url=http://${test.hosts.bind.address}:28080/sales-post-valve/
				-Dsales-post-sig.url=http://${test.hosts.bind.address}:28080/sales-post-sig/
				-Demployee.url=http://${test.hosts.bind.address}:28080/employee/
				-Demployee-redirect-valve.url=http://${test.hosts.bind.address}:28080/employee-redirect-valve/
				-Demployee-sig.url=http://${test.hosts.bind.address}:28080/employee-sig/
			</property>
		</configuration>
	</container>
</arquillian>